@model IEnumerable<WebApplication2.Models.TblUrun>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                Ürün Adı
            </th>
            <th>
                Ürün Fiyatı
            </th>
            <th>
                Ürün Adedi
            </th>
            <th>
                Ürün Fotoğrafı
            </th>
            <th>
                Kategori Bilgisi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunFiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAdet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunPhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TblKategoriler.KategoriAd)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.UrunId">Edit</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.UrunId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UrunId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
